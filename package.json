{
  "name": "nord-dns",
  "version": "2.0.0",
  "description": "NordDNS encrypts your DNS traffic and hides your IP and physical location. Works on any devices at once, on every major platform.",
  "repository": "https://github.com/IAmFrench/nord-dns.git",
  "author": "Alexandre Par√®s <IAmFrench@users.noreply.github.com>",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services/**/*.service.js",
    "start": "moleculer-runner",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "dns",
    "dns-server",
    "dns-over-https",
    "dns-over-tls",
    "dns-record",
    "encrypted-dns",
    "machine-learning",
    "docker",
    "kubernetes",
    "aws",
    "cloud",
    "serverless",
    "docker-compose",
    "azure",
    "gcp",
    "ibm-cloud",
    "artificial-intelligence",
    "covid-19-phishing"
  ],
  "devDependencies": {
    "eslint": "^7.27.0",
    "jest": "^26.4.2",
    "jest-cli": "^27.0.1",
    "moleculer-repl": "^0.6.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "busboy": "^0.3.1",
    "dns-packet": "^5.2.4",
    "dohjs": "^0.3.2",
    "ioredis": "^4.27.4",
    "jaeger-client": "^3.18.1",
    "moleculer": "^0.14.13",
    "moleculer-db": "^0.8.23",
    "moleculer-db-adapter-mongo": "^0.4.12",
    "moleculer-web": "^0.9.0",
    "nats": "^2.0.6",
    "node-fetch": "^2.6.1",
    "selenium-webdriver": "^4.0.0-beta.3",
    "swagger-stats": "^0.95.18"
  },
  "engines": {
    "node": ">= 14.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
}
